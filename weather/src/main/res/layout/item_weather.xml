<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        style="@style/dashboardElementFrame"
        android:orientation="vertical">

        <LinearLayout
            style="@style/dashboardElementTitleFrame"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black_1b"
                android:textSize="@dimen/text_big"
                android:textStyle="bold"
                tools:text="Вручение клиенту" />

            <TextView
                android:id="@+id/textPeriod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_1b"
                android:textSize="@dimen/text_big"
                android:textStyle="bold"
                tools:text="16:00-19:00" />
        </LinearLayout>

        <TextView
            android:id="@+id/textAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:textSize="@dimen/text_normal"
            tools:text="Анненский проезд, д. 3 стр. 2 Анненский проезд, д. 3 стр. 2" />

        <LinearLayout
            style="@style/dashboardElementTitleFrame"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textOrdersQuantity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                tools:text="2 заказа"
                android:textColor="@color/grey_dark"
                android:textSize="@dimen/text_big" />

            <TextView
                android:id="@+id/textGeo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/v_ic_location"
                android:drawableTint="@color/grey_78"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                tools:text="5.3км"
                android:textColor="@color/grey_dark"
                android:textSize="@dimen/text_big" />

            <TextView
                android:id="@+id/textTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/v_ic_time"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                tools:text="20 мин."
                android:textColor="@color/grey_dark"
                android:textSize="@dimen/text_big" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>